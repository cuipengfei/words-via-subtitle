{
  "name": "words-via-subtitle",
  "version": "1.0.0",
  "description": "Modern implementation of a subtitle-based English vocabulary learning application",
  "main": "./dist/main/main.js",
  "scripts": {
    "dev": "bun scripts/dev.js",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:next": "next dev src/renderer",
    "build": "bun run build:electron && bun run build:next",
    "build:electron": "tsc -p electron-tsconfig.json",
    "build:next": "next build src/renderer",
    "start": "cross-env NODE_ENV=production electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --config electron-builder.js",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --config eslint.config.js --ext .ts,.tsx .",
    "lint:fix": "eslint --config eslint.config.js --ext .ts,.tsx --fix .",
    "lint:verify": "node scripts/verify-eslint.js",
    "test": "vitest --config ./vitest.config.ts",
    "test:renderer": "vitest --config ./tests/renderer/vitest.config.ts"
  },
  "keywords": [
    "electron",
    "nextjs",
    "typescript",
    "subtitle",
    "language-learning",
    "vocabulary"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/autoprefixer": "^10.2.4",
    "@types/concurrently": "^7.0.3",
    "@types/electron-is-dev": "^1.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/subtitle": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "jsdom": "^26.1.0",
    "node-loader": "^2.1.0",
    "postcss": "^8.5.6",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.10",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "bing-translate-api": "^4.0.2",
    "electron-is-dev": "^3.0.1",
    "electron-next": "^3.1.5",
    "electron-store": "^10.1.0",
    "lucide-react": "^0.522.0",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-perfect-scrollbar": "^1.5.8",
    "react-resizable-panels": "^3.0.3",
    "subtitle": "^4.2.1"
  },
  "packageManager": "bun@1.2.17"
}
